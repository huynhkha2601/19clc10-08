<div class="container rounded bg-white h-100">
    <div class="row h-100">
        <div class="col-md-3 border-right mr-2">
            <div class="d-flex flex-column align-items-center text-center p-3 py-5 mb-3">
                <img class="img-fluid rounded-circle mt-5" style="height: 10em" alt="" onerror="this.onerror=null;this.src='/public/image/accounts/default.png'" width="150px"
                     src="/public/image/accounts/{{accountAuth.userid}}.jpg"><span
                    class="font-weight-bold">{{accountAuth.fullname}}</span>
                <span class="text-black-50">
                    {{accountAuth.email}}
                </span>
            </div>
        </div>
        <div class="col-md-8 border-right">
            <form method="post" action="/accounts/profile" class="p-3 py-5" enctype="multipart/form-data">

                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="text-right">Profile Settings</h4>
                </div>
                <div class="row mt-2">
                    <div class="col-md-12 mt-3" style="display: none;"><label class="labels"></label>
                        <input type="text" class="form-control" placeholder=""
                               value="{{accountAuth.userid}}" id="userid" name="userid">
                    </div>
                    <div class="col-md-12 mt-3"><label class="labels">Name</label>
                        <input type="text" class="form-control" placeholder="full name"
                               value="{{accountAuth.fullname}}" id="fullname" name="fullname">
                    </div>
                    <div class="col-md-12 mt-3"><label class="labels">Mobile Number</label>
                        <input type="text" class="form-control" placeholder="enter phone number"
                               value="{{accountAuth.telephone}}" id="telephone" name="telephone">
                    </div>
                    <div class="col-md-12 mt-3"><label class="labels">Address</label>
                        <input type="text" class="form-control" placeholder="enter address"
                               value="{{accountAuth.address}}" id="address" name="address">
                    </div>
                    <div class="col-md-12 mt-3"><label class="labels">Email ID</label>
                        <input type="email" class="form-control" placeholder="enter email id"
                               value="{{accountAuth.email}}" id="email" name="email">
                    </div>
                    <div class="col-md-12 mt-3"><label class="labels">Old Birthday</label>
                        <input type="text" class="form-control mb-2" value="{{formatDateTime accountAuth.dob}}"
                               disabled>
                    </div>
                    <div class="col-md-12 mt-3 mb-3"><label class="labels">Edit Birthday</label>
                        <input type="date" class="form-control" id="dob" name="dob">
                    </div>
                    <div class="col-md-12 mt-3">
                        <label for="avatar" class="col-md-3">Select avatar:</label>
                        <input class="col-md-7" type="file" id="avatar" name="avatar">
                    </div>
                </div>
                <div class="mt-5 text-center">
                    <button class="btn btn-success profile-button" type="submit">Save Profile</button>
                </div>
            </form>
        </div>
    </div>
</div>
