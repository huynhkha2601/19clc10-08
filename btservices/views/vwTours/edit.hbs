<div class="container">
    <div class="card">
        <h3 class="card-header">Editing a Tour</h3>
        <div class="card-body">
            <form method="post">
                <div class="form-group row">
                    <label for="tourid" class="col-sm-2 col-form-label">Tour ID:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="tourid" name="tourid" value="{{tour.tourid}}"
                               readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="agency" class="col-sm-2 col-form-label">Agency ID:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="agencyid" name="agencyid"
                               value="{{tour.agencyid}}"
                               readonly>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="tourname" class="col-sm-2 col-form-label">Tour name:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="tourname" name="tourname" value="{{tour.tourname}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="title" class="col-sm-2 col-form-label">Title:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="title" name="title" value="{{tour.title}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="description" class="col-sm-2 col-form-label">description</label>
                    <div class="col-sm-10">
                    <textarea type="text" class="form-control" style="height: 200px" id="description" name="description"
                              value="{{tour.description}}"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="location" class="col-sm-2 col-form-label" value="{{tour.location}}">Location:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="location" name="location">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="price" class="col-sm-2 col-form-label">Price:</label>
                    <div class="col-sm-10">
                        <input type="number" class="form-control" id="price" name="price" value="{{tour.price}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Old Start Date:</label>
                    <div class="col-sm-10 mb-2">
                        <input type="text" class="form-control" value="{{formatDateTime tour.datestart}}" readonly>
                    </div>
                    <label for="datestart" class="col-sm-2 col-form-label">Date Start:</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" id="datestart" name="datestart"
                               value="{{tour.datestart}}">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="" class="col-sm-2 col-form-label">Old End Date:</label>
                    <div class="col-sm-10 mb-2">
                        <input type="text" class="form-control" value="{{formatDateTime tour.dateend}}" readonly>
                    </div>
                    <label for="dateend" class="col-sm-2 col-form-label">Date End:</label>
                    <div class="col-sm-10">
                        <input type="datetime-local" class="form-control" id="dateend" name="dateend"
                               value="{{tour.dateend}}">
                    </div>
                </div>
                <div class="form-group row justify-content-center">
                    <label for="image" class="img-fluid col-sm-2 col-form-label">Tour Image:</label>
                    <img src="/public/image/tours/{{tour.tourid}}.jpg" alt="{{tour.tourid}}">
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label" for="file">Edit Image:</label>
                    <input type="file" class="form-control-file col-sm-10" id="file" name="file">
                </div>
                <div class="col-md-12 text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-save mr-1" aria-hidden="true"></i>Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>

</div>