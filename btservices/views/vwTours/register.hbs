<div class="card col-sm-12 col-md-12 col-lg-2 col-xl-12">
    <div class="d-flex">
        <div class="col-md-9 text-left mt-3">
            <h3 class="mt-3">List tours</h3>
        </div>
    </div>
    <div id ="table-wrapper"class="">
        <table class="table table-hover table-bordered table-striped">
            <tr class="thead-light">
                <th scope="col">Tourid</th>
                <th scope="col">Tourname</th>
                <th scope="col">Date Register</th>
                <th scope="col">Quantity</th>
                <th scope="col">Price</th>
                <th scope="col">Total</th>
                <th scope="col">&nbsp;</th>
            </tr>
            <tbody>
            {{#each registers}}
                <tr>
                    <td class="tm-product-name">{{tourId}}</td>
                    <td>{{tourname}}</td>
                    <td>{{formatDateTime dateRegister}}</td>
                    <td>{{quantity}}</td>
                    <td>{{price}}</td>
                    <td>{{total}}</td>
                    <td class="text-right">
                        <a href="/tours/edit?tourid={{tourid}}" class="btn btn-primary btn-sm">
                        <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a href="/tours/cancel/{{rId}}" class="btn btn-danger btn-sm">Cancel
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        <h3 class="text-right">Total Money: {{total}}</h3>
    </div>
</div>
