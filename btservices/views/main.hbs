<div class="card">
    <h3 class="card-header pl-5">
        Search Tours:
    </h3>
    <div class="card-body d-flex justify-content-center">
        <form method="post" class="form-inline">
            <select id="" name="" class="form-control-lg form-select-lg mr-3" style="width: 13.5em">
                <option selected disabled>Địa điểm</option>
<!--                {{#each a}}-->
                    <option value="{{lid}}">{{lname}}</option>
<!--                {{/each}}-->
            </select>
            <input class="form-control mr-3" type="date" placeholder="Theo Ngày Khởi Hành" aria-label="Search">
            <input class="form-control mr-3" type="search" placeholder="Price" aria-label="Search">
            <input class="form-control mr-3" type="date" placeholder="Theo Ngày Khởi Hành" aria-label="Search">
            <button class="btn btn-primary" type="submit">
                <i class="fa fa-search" aria-hidden="true"></i>Tìm Kiếm
            </button>
        </form>
    </div>
</div>
<div class="row mb-3">
    <div class="col-sm-4">
        <div class="card mt-3 vh-1000">
            <h4 class="card-header text-center" style="background-color: #69c510">
                Newest Tour
            </h4>
            {{#each newestTours}}
                <div class="card-body">
                    <div class="card" style="width: auto;">
                        <img src="/public/image/tours/{{tourid}}.jpg" class="card-img-top" alt="..."
                             style="height: 16.5em;">
                        <div class="card-body">
                            <h5>{{tourname}}</h5>
                            <div class="text-danger font-weight-bold">Price: {{formatMoney price}}</div>
                            <div>Time Start: {{formatDateTime datestart}}</div>
                            <div>Time Start: {{formatDateTime dateend}}</div>
                        </div>
                        <div class="card-footer text-muted text-right">
                            <a class="btn btn-md btn-outline-primary" href="#" role="button">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                Details
                            </a>
                            <a class="btn btn-md btn-outline-success" href="#" role="button">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                Booking
                            </a>
                        </div>
                    </div>
                </div>
            {{/each}}
            <div class="card-footer text-muted text-center">
                <a class="btn btn-lg btn-outline-primary" href="#" role="button">
                    <i class="fa fa-angle-double-right"></i>
                    View more
                </a>
