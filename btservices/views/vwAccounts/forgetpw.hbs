<div class="container">
    <form method="post" action="/accounts/forget"class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Forget Password</h3>
            </div>
            <div class="card-body">
                <form>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-user"></i></span>
                        </div>
                        <input type="text" class="form-control" placeholder="username" id="username" name="username">

                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="password" id="password" name="password">
                    </div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" class="form-control" placeholder="confirm password" id="confirm" name="confirm">
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Change password" class="btn float-right login_btn">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-end social_icon">
                    <span><i class="fab fa-facebook-square"></i></span>
                    <span><i class="fab fa-google-plus-square"></i></span>
                    <span><i class="fab fa-twitter-square"></i></span>
                </div>

                <div class="d-flex justify-content-center links">
                    Don't have an account?<a href="/accounts/register">Sign Up</a>
                </div>
                <div class="d-flex justify-content-center links">
                    Already have an account?<a href="/accouns/login">Sign In</a>
                </div>
            </div>
        </div>
    </form>
</div>



{{#section 'header'}}
    <link rel="stylesheet" type="text/css" href="/public/css/forgetpw.css">
{{/section}}
