<div class="container border-2">
    <h2>
        Tours in {{location.lname}}
    </h2>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            <ul class="pagination justify-content-center">
                {{#each listPages}}
                    <li class="page-item active"><a class="page-link" href="/tours/{{url}}?page={{value}}">{{value}}</a></li>
                {{/each}}
            </ul>
        </ul>
    </nav>

    <div class="row">
        {{#each tours}}
            <div class="col-xl-4 col-lg-6 col-md-6 col-sm-6">
                <div class="card-body">
                    <div class="card" style="width: auto;">
                        <img src="/public/image/tours/{{tourid}}.jpg" class="card-img-top" alt="..."
                             style="height: 16.5em;">
                        <div class="card-body">
                            <h4 style="height: 50px;">{{tourname}}</h4>
                            <h5>Time Start: {{title}}</h5>
                            <div class="text-danger font-weight-bold">Price: {{formatMoney price}}</div>
                            <div>Time Start: {{formatDateTime datestart}}</div>
                            <div>Time Start: {{formatDateTime dateend}}</div>
                        </div>
                        <div class="card-footer text-muted text-right">
                            <a class="btn btn-md btn-outline-primary" href="#" role="button">
                                <i class="fa fa-eye" aria-hidden="true"></i>
                                Details
                            </a>
                            <a class="btn btn-md btn-outline-success" href="#" role="button">
                                <i class="fa fa-cart-plus" aria-hidden="true"></i>
                                Booking
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            {{#each listPages}}
                <li class="page-item active"><a class="page-link" href="/tours/{{url}}?page={{value}}">{{value}}</a></li>
            {{/each}}
        </ul>
    </nav>
</div>
