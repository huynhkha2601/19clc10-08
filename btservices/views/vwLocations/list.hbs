<div class="d-flex justify-content-center pt-3">
    <div class="card col-sm-12 col-md-12 col-lg-2 col-xl-12" style="height: 720px">
        <div class="d-flex">
            <div class="col-md-9 text-left">
                <h3 class="mt-2">List Locations</h3>
            </div>
        </div>
        <div id ="table-wrapper"class="">
            <table class="table table-hover table-bordered table-striped">
                <tr class="thead-light">
                    <th scope="col">Location ID</th>
                    <th scope="col">Location Name</th>
                    <th scope="col">&nbsp;</th>
                </tr>
                <tbody>
                {{#each locations}}
                    <tr>
                        <td>{{lid}}</td>
                        <td class="tm-product-name">{{lname}}</td>
                        <td class="text-center">
                            <a href="/locations/edit?lid={{lid}}" class="btn btn-primary btn-sm">
                                <i class="fa fa-edit" aria-hidden="true"></i>
                            </a>
                            <a href="/locations/del?lid={{lid}}" class="btn btn-danger btn-sm">
                                <i class="fa fa-trash-o" aria-hidden="true"></i>
                            </a>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

